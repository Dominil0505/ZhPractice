@model List<ZhPractice.Models.Question.Question.Question>

@{
    ViewData["Title"] = "Questions";
}

<div class="p-3 mb-5 text-white rounded-bg">

    <h1>Questions</h1>
    <a asp-action="Create" class="btn btn-success">Add Question</a>

    <hr />

        <table class="table text-white">
            <thead>
                <tr>
                    <td>Question</td>
                    <td>Module</td>
                    <td>Edit</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var question in Model)
                {
                    @if (question != null)
                    {
                        <tr>
                            <td>@question.Name</td>
                            <td><a asp-action="Edit" class="btn btn-primary"><i class='bx bxs-edit-alt'></i></a></td>
                            <td><a asp-action="Delete" class="btn btn-danger"><i class='bx bx-trash'></i></a></td>
                        </tr>
                    }
                    else{
                    
                    }
                }
            </tbody>
        </table>
</div>
