}

<div class="p-3 mb-5 text-white rounded-bg">
<h1>Kérdés szerkesztés</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label class="control-label"> Id: </label>
                <input asp-for="Id" class="form-control" type="text" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label"> Kérdés: </label>
                <input asp-for="Name" class="form-control" type="text" />
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" asp-action="Edit">Kérdés Szerkesztése</button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Vissza a kérdésekhez</a>
</div>

</div>